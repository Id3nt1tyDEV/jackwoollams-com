---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

interface Props {
  pageTitle?: string;
  title?: string;
  description?: string;
  canonicalPath?: string;
  ogType?: "website" | "article";
}

const {
  pageTitle,
  title,
  description = "Consulting services across AI-related analytics, contact centre performance, and reporting systems.",
  canonicalPath = Astro.url.pathname,
  ogType = "website",
} = Astro.props;

const resolvedPageTitle = pageTitle ?? title ?? "Home";
const fullTitle = `${resolvedPageTitle} | Jack Woollams`;
const siteUrl = Astro.site?.toString() ?? "https://jackwoollams.com";
const canonicalUrl = canonicalPath.startsWith("http")
  ? canonicalPath
  : new URL(canonicalPath, siteUrl).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Jack Woollams" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />

    <title>{fullTitle}</title>
  </head>
  <body>
    <a class="skip-link" href="#main-content">Skip to content</a>
    <Nav />
    <main id="main-content" class="container">
      <slot />
    </main>
    <Footer />
    {
      import.meta.env.PUBLIC_CF_ANALYTICS_TOKEN && (
        <script
          is:inline
          defer
          src="https://static.cloudflareinsights.com/beacon.min.js"
          data-cf-beacon={`{"token":"${import.meta.env.PUBLIC_CF_ANALYTICS_TOKEN}"}`}
        />
      )
    }
  </body>
</html>
