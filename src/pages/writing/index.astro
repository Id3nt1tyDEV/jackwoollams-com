---
import BaseLayout from "../../layouts/BaseLayout.astro";
import WritingCard from "../../components/WritingCard.astro";
import { getWritingPosts } from "../../data/writing";

const posts = getWritingPosts();
---

<BaseLayout pageTitle="Writing" description="Short notes on analytics governance, reporting, and delivery practice.">
  <h1>Writing</h1>
  <p class="lead">
    Practical notes from analytics consulting delivery across contact centres, reporting governance, and operating
    design.
  </p>

  <div class="grid cards section">
    {posts.map((post) => <WritingCard {...post} />)}
  </div>
</BaseLayout>